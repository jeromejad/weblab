<%- include ("../partials/header") %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead d-none d-lg-block ">F.R.I.E.N.D.S</p>
			<div class="list-group d-none d-lg-block">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item thumb">Info 2</li>
				<li class="list-group-item thumb">Info 3</li>
			</div>
		</div>
			<div class="col-md-9 ">
				<div class="card thumb">
					<img class="card-img-top img-fluid desimg" src="<%=campground.image%>">
					<div class="card-body p-1 pl-3">
						<div class="card-title p-0">
							<h4>
								<a href=""><%=campground.name%></a> 
							
							</h4>
							  
							<p class="card-text p-0">
							  <%=campground.description%>
							</p>
							<p class="card-text">
								<em>Submitted by -<%=campground.author.username%></em>
							</p>
							 <% if(currentUser && campground.author.id.equals(currentUser._id)) {%>
								<a class="btn btn-warning" href="/campground/<%=campground._id%>/edit">Edit</a>
								<form id="delete-form" action="/campground/<%=campground._id%>?_method=delete" method="post">
									<button class="btn btn-danger">
										delete
									</button>
								</form>
							 <% } %>

						</div>	
							
						<div class=" text-right mb=0">
					   <a class="btn btn-success"   href="/campground/<%=campground._id%>/comments/new">Leave a Comment</a>
					</div>
							
					
					</div>
					
					
				</div>
              
				
				
				<div class="card thumb p-1">
				  
					  <div class="card-header">
						  <h4>
						Comments   
					     </h4>
						 
					  </div>
					  
				  
					
				  <div class="card-header">
					  <% campground.Comment.forEach(function(comment){%>
					<blockquote class="blockquote mb-0 mt=1">
					  <p class="lead"><%=comment.text%> </p>
					  <footer class="blockquote-footer mb=0 mt=0 text-right"><strong><%=comment.author.username%></strong></footer> 
						<%})%>
						
					</blockquote>
					  
				  </div>
					
					
				</div>

			</div>
	</div>

</div>



<%- include ("../partials/footer") %>